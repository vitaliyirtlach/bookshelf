{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,       
    "allowSyntheticDefaultImports": true,       
    "target": "es5",                       
    "module": "commonjs",                     
    "jsx": "react", 
    "outDir": "./build",  
    "strict": true,  
    "esModuleInterop": true, 
    "moduleResolution": "node",
    "skipLibCheck": true,  
    "removeComments": true,
    "experimentalDecorators": true,        
    "strictFunctionTypes": true,       
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@styles/*": [
        "./src/styles/*"
      ]
    }
  }
}
